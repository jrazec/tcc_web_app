<div class="table-responsive">
    <table class="table align-middle table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col" class="table-light" style="width: 5%">ID</th>
                <th scope="col" class="table-light" style="width: 35%">QUESTION</th>
                <th scope="col" class="table-light" style="width: 10%">TYPE</th>
                <th scope="col" class="table-light" style="width: 10%">NPC</th>
                <th scope="col" class="table-light" style="width: 10%">ROOM</th>
                <th scope="col" class="table-light" style="width: 10%">Answer</th>
                <th scope="col" class="table-light" style="width: 5%">Choice</th>
                <th scope="col" class="table-light" style="width: 5%">Edit</th>
                <th scope="col" class="table-light" style="width: 5%">Delete</th>
            </tr>
        </thead>
        <tbody style="font-size: 10px">
            <% if (questDesigTable.error !== "error") {  %>
                <% for (let i = 0; i < questDesigTable.length; i++ ) {%>
                    <tr>
                        <td class="questPkId">
                            <%= String(questDesigTable[i].quest_id) %>
                        </td>
                        <td>
                            <%= String(questDesigTable[i].question)  %>
                        </td>
                        <td>
                            <%= String(questDesigTable[i].quest_type)  %>
                        </td>
                        <td>
                            <%= String(questDesigTable[i].npc_name)  %>
                        </td>
                        <td>
                            <%= String(questDesigTable[i].room_name)  %>
                        </td>  
                        <td>
                            <%= String(questDesigTable[i].answer)  %>
                        </td>  
                        <td>
                            <%= String(questDesigTable[i].choices)  %>
                        </td>  

                        <td class="update-quest-btn text-center" ><div id="<%= String(questDesigTable[i].quest_id) %>" style="cursor: pointer;"><a href="/admin/setup/quest/edit/<%= String(questDesigTable[i].quest_id) %>" style="text-decoration: none; ">üìù</a></div></td> 
                        <td class="delete-quest-btn text-center" ><div id="<%= String(questDesigTable[i].quest_id) %>" style="cursor: pointer;"><a href="/admin/setup/quest/delete/<%= String(questDesigTable[i].quest_id) %>" style="text-decoration: none;">üóëÔ∏è</a></div></td>          
                    </tr>     
                <% }; %>
                <% } else { %> 
                    <td colspan="8" class="table-danger text-center" >There is an error occured in the database. Please contact the developers.</td> 
                <% } %>
        </tbody>
    </table>
</div>
